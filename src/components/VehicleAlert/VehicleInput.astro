---
interface Props {
  label: string;
  id: string;
  pattern?: string;
  required?: boolean;
}

const { label, id, pattern, required } = Astro.props;
---

<div>
  <label for={id} class="block text-sm font-medium text-gray-700 mb-1">
    {label}
  </label>
  <input
    type="text"
    id={id}
    name={id}
    pattern={pattern}
    required={required}
    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
  />
  <p class="mt-1 text-sm text-red-600 hidden" id={`${id}-error`}></p>
</div>

<style>
  input:invalid {
    border-color: rgb(239 68 68);
  }
</style>