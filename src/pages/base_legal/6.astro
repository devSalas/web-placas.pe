---
import Header from "@components/Header.astro";
import NavbarBaseLegal from "@components/NavbarBaseLegal.astro";
import NavbarReglamentos from "@components/NavbarReglamentos.astro";
import disposicionesComplementarias from "@data/page/base_legal/6";

import Layout from "@layouts/Layout.astro";
---

<Layout title="">
  <Header
    title={disposicionesComplementarias.titulo}
    subtitle={disposicionesComplementarias.subtitulo}
  />
  <NavbarBaseLegal />
  <div
    class="p-[20px] sm:p-[40px] lg:p-[40px] flex flex-col gap-[20px] lg:flex-row w-full lg:pb-[100px]"
  >
    <section class="p-4">
      <h1 class="text-2xl font-bold mb-4">
        {disposicionesComplementarias.numeroTitulo}
      </h1>
      <p class="text-lg font-semibold mb-4">
        {disposicionesComplementarias.reglamento}
      </p>

      {
        disposicionesComplementarias.articulos?.map((articulo) => (
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-2">{articulo.subtitulo}</h2>
            {Array.isArray(articulo.descripcion) ? (
              articulo.descripcion.map((item, index) => (
                <p class="mt-2">{item}</p>
              ))
            ) : (
              <p class="mt-2">{articulo.descripcion}</p>
            )}
          </div>
        ))
      }
    </section>

    <section class="hidden lg:block">
      <NavbarReglamentos />
    </section>
  </div>
</Layout>
