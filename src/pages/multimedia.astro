---
import { dataMultimediaPage } from "@data/page/multimedia";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Novedades">
    <header class="lg:flex lg:justify-center w-full lg:py-[10px] lg: px-[20px]">
        <div class="flex flex-col w-full gap-[10px] lg:flex-row">
            <div
                class="text-center py-[20px] font-bold text-xl bg-background_third text-white lg:text-[25px] lg:py-[30px] lg:px-[60px]"
            >
                {dataMultimediaPage.h1}
            </div>
            <div
                class="text-center font-bold text-lg lg:text-base lg:flex lg:items-center lg:py-[10px] lg:px-[60px] lg:bg-background_fourth text-second lg:grow"
            >
                {dataMultimediaPage.subtitle}
            </div>
        </div>
    </header>
    <div class="p-[20px] sm:p-[40px] lg:p-[60px]">
        <div class="flex flex-col gap-[10px] pb-[20px] sm:pb-[30px]">
            <!-- Contenedor con la relación de aspecto 16:9 -->
            <div class="w-full max-w-[800px] aspect-video">
                <iframe
                    class="w-full h-full"
                    src="https://www.youtube.com/embed/eXsMcCSK9kA?si=KX7hPYrbihfFXYFF"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin"
                    allowfullscreen
                >
                </iframe>
            </div>

            <!-- Título y descripción -->
            <h3 class="text-2xl sm:text-[28px] lg:text-[36px]">Alerta Vehicular</h3>
            <p class="text-sm sm:text-lg " >
                Sigue los pasos para recibir alertas de intentos de trámites con
                tu número de placa.
            </p>
        </div>
        <div class="flex flex-col gap-[10px] sm:gap-[15px] lg:gap-[30px]">
            <!-- Contenedor con la relación de aspecto 16:9 -->
            <div class="w-full max-w-[800px] aspect-video">
                <iframe
                    class="w-full h-full"
                    src="https://www.youtube.com/embed/eXsMcCSK9kA?si=KX7hPYrbihfFXYFF"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin"
                    allowfullscreen
                >
                </iframe>
            </div>
            <!-- Título y descripción -->
            <h3 class="text-2xl sm:text-[28px] lg:text-[36px]">
                Renovación de placas especiales
            </h3>
        </div>
    </div>
</Layout>
